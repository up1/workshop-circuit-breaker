groups:
- name: example
  rules:

  - alert: service_b_down
    expr: rate(total_failures{circuit="serviceBCircuit"}[1m]) > 0
    for: 10s
    labels:
      severity: page
    annotations:
      summary: "Instance {{ $labels.instance }} down"
      description: "{{ $labels.instance }} of job {{ $labels.job }} has been down for more than 10 seconds."